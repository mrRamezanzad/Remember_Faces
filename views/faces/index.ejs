<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Remember faces game</title>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.1/css/bootstrap.css' integrity='sha512-vxhcSRMDjtLpgTL/8uRKEjhCh8YyDER14SFb9cuceRmefufcZBweOJuQJ70JYRZiq+QhpaTM3zDw9YSOPbqtFQ==' crossorigin='anonymous'/>
    <link rel="stylesheet" href="/stylesheets/dist/faces.css">
</head>

<body>
    <div class="container">
        <row>
            <center>
                <h1>Remember <strong>Faces</strong> Below</h1>
                <span class="timer">15</span>
            </center>
        </row>
        <div class="row justify-content-between">
            <!-- Rendering Faces -->
            <% for (const question  of questions ) { %>
                <div class="col-10 col-md-4 col-lg-2 mx-2 ">
                    <div class="card"><img src="<%= question.image %>" alt="image"></div>
                    <label for="image"><%= question.name %></label>
                </div>
            <% } %>
        </div>
    </div>

<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js' integrity='sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==' crossorigin='anonymous'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.1/js/bootstrap.js' integrity='sha512-jrPfgwWrYtTfEO47P2AJWZqIpy3bLH6eyqrPWbaYvigUW1i0MxLEuM16JOm+IS6SAhFREKHfVn4cBA4NQ0Ntxg==' crossorigin='anonymous'></script>
<script src="/javascripts/faces.js"></script>
</body>

</html>